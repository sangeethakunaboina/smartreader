BoxLayout:
    orientation: "vertical"
    spacing: dp(10)
    padding: dp(10)

    # Display the webcam feed
    Image:
        id: camera_feed
        size_hint: 1, 0.8

    # Status label for messages
    Label:
        id: status_label
        text: "Press 'Capture' to take a picture."
        size_hint: 1, 0.1
        halign: "center"
        valign: "middle"
        text_size: self.size

    # Buttons at the bottom
    BoxLayout:
        size_hint: 1, 0.1
        spacing: dp(10)

        Button:
            text: "Capture"
            on_press: app.capture_image(self)

        Button:
            text: "Exit"
            on_press: app.exit_app(self)
